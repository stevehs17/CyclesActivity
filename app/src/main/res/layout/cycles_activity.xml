<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ssimon.cyclesactivity.CyclesActivity"
    >
    <TextView
        android:id="@+id/txt_coffee_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee: "
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/txt_coffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/txt_coffee_label"
        android:text="French Roast"
        />
    <TextView
        android:id="@+id/txt_totalvolume_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Volume: "
        android:layout_below="@id/txt_coffee"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/txt_totalvolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_coffee"
        android:layout_toEndOf="@id/txt_totalvolume_label"
        android:text="500 mL"
        />
    <TextView
        android:id="@+id/txt_totalvolume_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Volume: "
        android:layout_below="@id/txt_coffee"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/txt_totalvolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_coffee"
        android:layout_toEndOf="@id/txt_totalvolume_label"
        android:text="500 mL"
        />

</RelativeLayout>
