    <style name="cycle_parameter">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">0dp</item>

        <item name="android:paddingEnd">5dp</item>
        <item name="android:background">@drawable/rectangular_outline</item>
        <item name="android:textAppearance">@color/black</item>
    </style>

    <style name="cycle_constant">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="cycle_parameter_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>

    </style>

    <style name="table_cell_label" parent="table_cell">
        <item name="android:layout_width">60dp</item>
    </style>

    <style name="table_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonThemeRed" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/red</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
    </style>

    <style name="Text.Huge">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Huge.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Large.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Medium.Bold.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Medium.Red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Text.Medium.Tab">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Medium.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Small.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Small.Red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeadingText" parent="WrapContent">
        <item name="android:textAppearance">@style/Text.Huge</item>
    </style>

    <style name="LabelText" parent="WrapContent">
        <item name="android:textAppearance">@style/Text.Small</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>
    </resources>
