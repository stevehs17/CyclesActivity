<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:theme">@style/ButtonThemeRed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Text.Medium.White</item>
    </style>

    <style name="ButtonThemeRed" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/red</item>
    </style>

    <style name="HeadingText" parent="WrapContent">
        <item name="android:textAppearance">@style/Text.Large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LabelText" parent="WrapContent">
        <item name="android:textAppearance">@style/Text.Small</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>


    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SeekbarButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
    </style>

    <style name="Text.Large">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Medium.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>










    <!-- styles below are to be removed when done -->





    <style name="table_cell">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>

    </style>

    <style name="cycle_parameter">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">20sp</item>

        <item name="android:paddingEnd">5dp</item>
        <item name="android:background">@drawable/rectangular_outline</item>
        <item name="android:textAppearance">@color/black</item>
    </style>

    <style name="cycle_constant">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="cycle_parameter_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="table_cell_label" parent="table_cell">
        <item name="android:layout_width">60dp</item>
    </style>

    <style name="table_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
 </resources>
